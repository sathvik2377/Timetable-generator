# Frontend Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# Authentication
NEXT_PUBLIC_JWT_STORAGE_KEY=timetable_token
NEXT_PUBLIC_REFRESH_TOKEN_KEY=timetable_refresh_token

# App Configuration
NEXT_PUBLIC_APP_NAME=AI Academic Timetable Scheduler
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_COMPANY_NAME=Smart India Hackathon

# Theme Configuration
NEXT_PUBLIC_DEFAULT_THEME=dark
NEXT_PUBLIC_ENABLE_THEME_TOGGLE=true

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_DRAG_DROP=true

# Development
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_LOG_LEVEL=debug
